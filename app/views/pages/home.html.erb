<div class="row">
        <div class="col">
        <div class="alert alert-secondary">
            <h4 class="alert-secondary">
                Welcome to the DoggoShouts!
            </h4>
                <hr \>
            <p>
               Feel free to bark B)
            </p>

        </div>

        <div class="col">
            <div class="chat" data-channel-subscribe="chat" data-room-id="chat">
                <% @messages.each do |message| %>
                    <div class="chat-message-container">
                        <div class="row no-gutters">
                            <div class="col-auto text-center author">
                                <%= message.user.username %>
                                <img src="<%= message.user.gravatar_url %>" class="avatar" alt="">
                            </div>
                            <div class="col">
                                <div class="message-content">
                                    <p class="mb-1">
                                        <%= message.message %>
                                    </p>
                                    <div class="text-right">
                                        <small>
                                            <%= message.created_at %>
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>

        <%= simple_form_for @message, remote: true do |form| %>
            <div class="input-group mb-3">
                <%= form.input :message, as: :string,
                                 wrapper: false,
                                 label: false,
                                 input_html: {
                                   class: 'chat-input'
                                 } %>
                <div class="input-group-append">
                    <%= form.submit "Send", class: 'btn btn-primary chat-input' %>
                </div>
            </div>
        <% end %>
    </div>
</div>

<div class="d-none" data-role="message-template">
  <div class="chat-message-container">
    <div class="row no-gutters">
      <div class="col-auto text-center">
        <img src="" class="avatar" alt="" data-role="user-avatar">
      </div>

      <div class="col">
        <div class="message-content">
          <p class="mb-1" data-role="message-text"></p>

          <div class="text-right">
            <small data-role="message-date"></small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
